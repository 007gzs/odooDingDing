                                <field name="agent_id" placeholder="请输入AgentId！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="agent_id"/>
                                <div class="text-muted">
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="corp_id" placeholder="请输入钉钉CorpId！"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="corp_id"/>
